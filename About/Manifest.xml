<!--
This file is used to provide additional information about the mod.
The format was originally used by Fluffy's ModManager.
Documentation: https://github.com/fluffy-mods/ModManager/blob/master/ForModders.md
-->

<Manifest>
	<!-- An identifier for the mod. Typically follows the form "ModName". -->
	<identifier>ModTemplate</identifier>

	<!-- The version of the mod. Follows the form "major.minor.build.revision". Must have 2-4 elements. -->
	<version>1.0.0.0</version>

	<!-- A list of identifiers of mods which the mod requires to function. -->
	<dependencies>
		<li>Harmony</li>
	</dependencies>

	<!-- Identifiers of mods which are incompatible with the mod. -->
	<!-- <incompatibleWith/> -->

	<!-- Identifiers of mods which should be loaded after the mod. -->
	<!-- <loadBefore/> -->

	<!-- Identifiers of mods which should be loaded before the mod. -->
	<loadAfter>
		<li>Harmony</li>
	</loadAfter>

	<!-- Identifiers of mods which are recommended to the user when using ModManager. -->
	<!-- <suggests/> -->

	<!-- Whether to show promotions for other mods by the author of the mod when using ModManager. -->
	<showCrossPromotions>true</showCrossPromotions>

	<!-- A link to this file online. -->
	<manifestUri>https://github.com/Lakuna/RimWorld-Mod-Template/About/Manifest.xml</manifestUri>

	<!-- The link to download the mod from. -->
	<downloadUri>https://github.com/Lakuna/RimWorld-Mod-Template/releases/latest</downloadUri>
</Manifest>
